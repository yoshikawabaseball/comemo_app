<div class="listeditPage">
  <div class="container">
    <%= form_with model: @user, url: {action: :update}, html: {class: "listForm"}, local: true do |f| %>
      <% if @user.errors.any? %>
        <p class="text-danger">ユーザー名は1~12文字以内で入力してください</p>
      <% end %>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control listName", placeholder: "ユーザー名" %>
      <div class="text-center"><%= f.submit "編集する", class: "submitBtn" %></div>
    <% end %>
  </div>
</div>